<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pronunciation">
        <activity
            android:name=".SPLASH"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PronunciationmadeeasyActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name=".PronunciationmadeeasyActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SPEECH"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name=".SPEECH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".WORD"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name=".WORD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LIST"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name=".LIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TUTORIAL"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name=".TUTORIAL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>